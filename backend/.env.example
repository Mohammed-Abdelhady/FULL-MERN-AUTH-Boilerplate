# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
# Options: development, production, test
NODE_ENV=development

# Server Port
# Default: 3000
PORT=3000

# MongoDB Connection URI
# Local: mongodb://localhost:27017/authboiler
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/authboiler

# Frontend URL (for CORS)
# Local: http://localhost:3000
# Production: https://yourdomain.com
CLIENT_URL=http://localhost:3000

# Rate Limiting Configuration
# TTL: Time window in seconds (default: 60)
# Limit: Max requests per TTL (default: 60)
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# SMTP Configuration (for sending emails)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=your-email@gmail.com

# Bcrypt Configuration
# Number of rounds for password hashing (default: 10, range: 4-12)
BCRYPT_ROUNDS=10

# Session Configuration
# Cookie name for session token (default: sid)
SESSION_COOKIE_NAME=sid
# Cookie max age in milliseconds (default: 604800000 = 7 days)
SESSION_COOKIE_MAX_AGE=604800000

# Activation Code Configuration
# Code expiry time in milliseconds (default: 900000 = 15 minutes)
ACTIVATION_CODE_EXPIRES_IN=900000

# Security Configuration (optional, will be added later)
# JWT_SECRET=your-super-secret-jwt-key
# GOOGLE_CLIENT_ID=your-google-oauth-client-id
# FACEBOOK_APP_ID=your-facebook-app-id
